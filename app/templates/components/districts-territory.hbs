<ul>
  <li id="all" class="territory_menu" {{action "findDistrictbyTerritory"}}>
    <span>{{t "districts.all"}}</span>
  </li>
  {{#each allTerritory}}
    <li class="territory_menu" {{action "findDistrictbyTerritory" this}}>
      {{name}}
    </li>
  {{/each}}
</ul>
<div>
{{view Ember.Select
  contentBinding='districtsByTerritory'
  optionLabelPath='content.name'
  optionValuePath='content.id'
  selectionBinding='currentSelected'
  value=''
  promptBinding='selectDistrictLabel'
  optionClassPath='dropdowncls'}}
</div>
