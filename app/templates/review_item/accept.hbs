<div class="row ">
  <div class="small-12">
    {{#if itemTypeId}}
      <div class="with-btm intro">
        {{ item-details-ui-control itemval=this value=itemTypeName name=itemTypeId }}
        {{view MyContainerView elementId="my_container_view"}}
        <br>
        {{view AddChildViewButton}}
      </div>
      <div class="row">
        <span class="small-10 small-offset-1  columns">
          <a href="#" {{ action "acceptOffer" }} id="acceptItem" class="button expand">{{t "review_item.accept_item"}}</a>
        </span>
      </div>
    {{else}}
      <p>
        <i class="icon-empty-items fa fa-info-circle fa-5x"></i>
        <p class="no-items">Please choose Item Type first!</p>
      </p>
    {{/if}}
  </div>
</div>

