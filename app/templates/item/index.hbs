<nav class="tab-bar">
  <section class="left-small">
    {{#link-to 'offer.offer_details' this.offer.id classNames="back"}}{{t "back"}}{{/link-to}}
  </section>
  <section class="middle tab-bar-section">
    <h1 class="title">{{t "item.item_details"}}</h1>
  </section>
</nav>
<section class="main-section">
  <div class="row item-details">
    <div class="small-12 columns">
      <div class="row">
        <div class="small-3 large-2 columns fav-item-image">
          <img {{bind-attr src="displayImageUrl"}} class="thumb" style="width:100px;" />
        </div>
        <div class="small-9 large-10 columns">
          <h3 class="ellipsis two-line-ellipsis">{{donorDescription}}</h3>
          <div>
            {{t "item.condition" conditionBinding="donorCondition.name"}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="small-offset-7 small-5 large-offset-9 large-3 columns link">
          <a href="#" {{action '' this}}>{{t "item.cancel"}}</a>
          <a href="#" {{action '' this}}>{{t "item.edit"}}</a>
        </div>
      </div>
    </div>
  </div>
</section>
