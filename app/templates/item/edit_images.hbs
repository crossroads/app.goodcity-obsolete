<section class="main-section">

  <div id="main-image" {{bind-attr class="isExpanded"}}>
    {{#unless noImage}}
      <div {{bind-attr style="previewImageBgCss"}} class="center-box">
        <span class="center-item">
          <img {{bind-attr src="previewImage.imageUrl" class=":center-item isExpanded::hidden"}} />
        </span>
        <div id="main-image-controls">
          <a {{action "deleteImage"}} title="delete image"><i class="fa fa-trash"></i></a>
          <a {{action "setFavourite"}} title="set as cover image"><i {{bind-attr class=":fa faStarClass"}}></i></a>
          <a {{action "expandImage"}} title="expand/compress image"><i {{bind-attr class=":fa faExpandClass"}}></i></a>
        </div>
      </div>
    {{else}}
    <div class="center-box">
      <span class="center-item">
        <h3>What are you donating?</h3>
        <p>Take some photos</p>
      </span>
    </div>
    {{/unless}}
  </div>

  <ul id="photo-list" {{bind-attr class="isExpanded:hidden"}}>
    <li>
      <a id="add-photo" {{action "triggerUpload"}} {{bind-attr class=":center-box isReady::disabled" style="thumbImageCss"}}>
        <span class="center-item">
          <i class="fa fa-camera"></i>
          {{addPhotoLabel}}
        </span>
      </a>
      {{cloudinary-upload ready="uploadReady" progress="uploadProgress"
        always="uploadComplete" done="uploadSuccess" style="display:none;"}}
    </li>
    {{#each image in images}}
      <li>
        <a {{action "setPreview" image}} {{bind-attr class=":thumb-img image.selected"}}>
          <img {{bind-attr src="image.thumbImageUrl" style="thumbImageCss"}} />
          <i {{bind-attr class=":fa :fa-star image.favourite::hidden"}}></i>
        </a>
      </li>
    {{/each}}
  </ul>

  <div class="btm" {{bind-attr class="isExpanded:hidden"}}>
    <div class="row">
      <div class="small-6 columns">
        <button {{ action "back"}} class="button expand secondary">{{t "back"}}</button>
      </div>
      <div class="small-6 columns">
        <button {{ action "next"}} {{bind-attr disabled="noImage"}} class="button expand">{{t "next"}}</button>
      </div>
    </div>
  </div>

</section>
