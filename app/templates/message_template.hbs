<div>
{{#each filteredContent}}
  <div class='message_box' {{bind-attr id=this.id}}>
    <div class='message_details'>
      {{t "full_name" firstNameBinding=this.sender.firstName lastNameBinding=this.sender.lastName}}
      {{this.sender.roleInitials}}
      <br/>
      {{view 'time-ago' timeValue=createdAt}}

      {{#if controller.itemMessage}}
        <a href="#/" {{action showMessage this}}>see here</a>
      {{/if}}

      {{#if controller.offerMessage}}
        {{#if itemImageUrl}}
          <div class='item_message'>
            <img {{bind-attr src=itemImageUrl}} class="thumb small" />
          </div>
        {{/if}}
      {{/if}}

    </div>

  {{#if controller.offerMessage}}
    {{body}}
  {{/if}}
  </div>
{{/each}}

{{#validatable-form class="form-horizontal" action="sendMessage" on="submit"}}
  {{textarea type='text' value=body name="body" rows=5 cols=20 required='true'}}

  <br/>
  <button>Send</button>
  </div>
{{/validatable-form}}
