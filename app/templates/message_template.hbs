{{#each filteredContent}}
  <div class='message_box' {{bind-attr id=this.id}}>
    <div class='message_details'>
      {{t inbox.full_name firstNameBinding=this.sender.firstName lastNameBinding=this.sender.lastName}}
      {{this.sender.roleInitials}}

      {{#if this.recipient}}
        â†’

        {{t inbox.full_name firstNameBinding=this.recipient.firstName lastNameBinding=this.recipient.lastName}}
        {{this.recipient.roleInitials}}
      {{/if}}

      <br/>
      {{display-timeago this.createdAt}}

      {{#if controller.itemMessage}}
        <a href="#/" {{action showMessage this}}>see here</a>
      {{/if}}

    </div>

  <br/>

  {{#if controller.offerMessage}}
    {{body}}<br/> <br/>
  {{/if}}
  </div>
{{/each}}

{{textarea type='text' value=body name="body" rows=5 cols=20 }}

<br/>
<button {{action "sendMessage"}}>Send</button>
