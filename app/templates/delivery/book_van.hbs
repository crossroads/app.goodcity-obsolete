<nav class="tab-bar">
  <section class="left-small">
    {{#link-to 'offer.plan_delivery' classNames="back"}}{{t "back"}}{{/link-to}}
  </section>

  <section class="middle tab-bar-section">
    <h1 class="title">Book Van</h1>
  </section>
</nav>

<section class="main-section book-van">
  <div class="row">
    <div class="small-12 columns with-btm">

      <div class="row">
        <h3>Preferred day/time</h3>
        <div class='description'>Limited to Crossroads' operating hours</div>
      </div>

      <div class="row">
        <div class="small-6 columns">
          <input type='text'>
        </div>
        <div class="small-6 columns">
          <input type='text'>
        </div>
      </div>

      <div class="row">
        <h3>Extra Requirements</h3>
        <div class='checkbox'>
          {{view Ember.Checkbox id='1' }}
          <label for='1'><span>Speak English</span></label>
        </div>

        <div class='checkbox'>
          {{view Ember.Checkbox id='2' }}
          <label for='2'><span>Borrow trolley(s) + $20/piece</span></label>
        </div>

        <div class='checkbox'>
          {{view Ember.Checkbox id='3' }}
          <label for='3'><span>Porterage/go up(negotiate with drivers)</span></label>
        </div>
      </div>

      <div class="row">
        <div class='description'>Extra Time(15 minutes waiting time is included for you to load the van. Extra time incurs a charge.)</div>
      </div>

      <div class="row">
        {{view Ember.Select}}
      </div>

      <div class="btm">
        <div class="row">
          <div class="small-10 small-offset-1 columns">
            <button {{action ''}} class='button expand'>Get Quote</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
