<aside class="left-off-canvas-menu">
  <ul class="off-canvas-list">
    <li><label>App menu</label></li>

    {{#if session.currentUser.isStaff}}
      <li>{{#link-to 'inbox'}}{{t "inbox.title"}}{{/link-to}}</li>
      {{#if session.currentUser.isReviewer}}
        <li>{{#link-to 'inbox.my_list'}}{{t "inbox.my_list"}}{{/link-to}}</li>
      {{/if}}
      <li>{{#link-to 'inbox.under_review'}}{{t "inbox.in_review"}}{{/link-to}}</li>
      <li>{{#link-to 'inbox.reviewed'}}{{t "inbox.reviewed_offers"}}{{/link-to}}</li>
      <li>{{#link-to 'inbox.scheduled'}}{{t "inbox.scheduled_offers"}}{{/link-to}}</li>
      <li>{{#link-to 'inbox.closed'}}{{t "inbox.closed_offers"}}{{/link-to}}</li>
      <li>{{#link-to 'inbox.received'}}{{t "inbox.received_offers"}}{{/link-to}}</li>
    {{else}}
      <li>{{#link-to 'offers'}}{{t "application.all_offers"}}{{/link-to}}</li>
    {{/if}}

    <li><a href="#" {{action 'logMeOut'}}>{{t "application.logout"}}</a></li>
  </ul>
</aside>
