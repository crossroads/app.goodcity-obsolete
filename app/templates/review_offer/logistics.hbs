<div class="tabs-content transport-content">
  <section class="main-section">
    <div class="row ui">

      {{#if isScheduled}}
        {{partial 'offer/delivery_details'}}
      {{else}}
        {{#if allRejectedItems}}
          <div class='noTransportItems'>
            <i class="icon-empty-items fa fa-info-circle fa-5x"></i>
            <div class='info-text'>No items to transport.</div>

            <div class="row transport-buttons">
              <div class="small-6 columns">
                <a href="#" class="button secondary expand">Close Offer</a>
              </div>
              <div class="small-6 columns">
                {{#link-to '' classNames='button expand'}}Message Donor{{/link-to}}
              </div>
            </div>
          </div>
        {{else}}
          {{#if pendingItem}}
            <p>
              <p><span class="icon-no-items"></span></p>
              <p class="no-items">
                Please finish reviewing items first!
              </p>
            </p>

          {{else}}

            <div class="small-12 columns">
              <h3>Accepted Items ({{accepted.length}})</h3>
              {{#each item in accepted}}
                {{#link-to ''}}
                  <img {{bind-attr src=item.displayImageUrl}} class="thumbnail" />
                {{/link-to}}
              {{/each}}
            </div>

            {{#if isReviewed}}

              <div class="small-12 columns">
                <div class = 'transport_details'>
                  Gogovan Reqirement: {{gogovanTransport.name}}
                </div>
                <div class = 'transport_details'>
                  Crossroads Requirement: {{crossroadsTransport.name}}
                </div>
              </div>

            {{else}}

              {{partial 'review_offer/logistics_details_form'}}

            {{/if}}

          {{/if}}
        {{/if}}
      {{/if}}
    </div>
  </section>
</div>
