<div class="details row">
  <div class="small-2 text-center columns">
    <i class='fa fa-minus-circle fa-2x icon icon-center' {{ action "removeItemTypeComponent" on="click" target="view" }}></i>
  </div>
  <div class="small-10 columns">
    {{view "item-details-ui-control"
      name=view.packagetypeid
      pkgid=view.pkgid
      itemval=this
      itemtypename=view.itemtypename
      packagetypeid=view.packagetypeid
      comment=view.comment
      subitemtypes=view.subItemTypes
      packagetype=view.packagetype
      width=view.width
      height=view.height
      length=view.length
      quantity=view.quantity
      value=view.itemId}}
  </div>
</div>
<br>
