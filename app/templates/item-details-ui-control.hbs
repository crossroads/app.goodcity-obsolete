<div class="row">
  <div class="small-12 columns detail_container">
    <div class="row top">
      <div class="small-3 columns">
        {{cloudinary-image imageId=view.itemval.itemDefaultImageId
          className='fav_image' width=70 height=70}}
      </div>
      <div class="small-7 columns head">
        <span class="ui">
          {{input
            type="text"
            name="itemtypename"
            valueBinding="view.itemtypename"
            placeholderBinding="Item Type"
            maxlengthBinding="view.maxlength"
          }}
        </span>
      </div>
      <div class="small-2 columns icon" {{action "hideComment" on="click" target="view"}}>
        <i {{ bind-attr class=":fa :fa-lg view.isHide:fa-plus:is-hide" }}></i>
      </div>
    </div>
    <div {{bind-attr class="view.isHide :row :bottom :ui" }}>
      <div class="small-10 columns head">
        {{input
          type="text"
          name="comment"
          valueBinding="view.comment"
          placeholder="Comments"
          maxlength="50"
        }}
      </div>
      <div class="small-2 columns icon" {{action "hideComment" on="click" target="view"}}>
        <i class="fa fa-minus fa-lg"></i>
      </div>
    </div>
    <div class="row bottom">
      <div {{bind-attr class=":small-6 :columns :ui :inner"}}>
        {{input
          type="number"
          name="qty"
          valueBinding="view.quantity"
          placeholder="Qty"
          maxlength="8"
        }}
      </div>
      <div {{bind-attr class=":small-2 :columns :ui :inner" }}>
        {{input
          type="number"
          name="length"
          valueBinding="view.length"
          placeholder="L"
          maxlength="8"
        }}
      </div>
      <div {{bind-attr class=":small-2 :columns :ui :inner"}}>
        {{input
          type="number"
          name="width"
          valueBinding="view.width"
          placeholder="W"
          maxlength="5"
        }}
      </div>
      <div {{bind-attr class=":small-2 :columns :ui :inner"}}>
        {{input
          type="number"
          name="height"
          valueBinding="view.height"
          placeholder="H"
          maxlength="5"
        }}
      </div>
    </div>
  </div>
</div>
